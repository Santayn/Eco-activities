<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Поле ввода названия мероприятия -->
    <EditText
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название мероприятия"
        android:inputType="text"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Поле ввода описания мероприятия -->
    <EditText
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание мероприятия"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Поле ввода даты мероприятия -->
    <EditText
        android:id="@+id/event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Дата мероприятия (например, 2023-10-15)"
        android:inputType="date"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp" />
    <!-- Предварительный просмотр изображения -->
    <!-- Предварительный просмотр изображения -->
    <ImageView
        android:id="@+id/event_image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/first"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка выбора изображения -->
    <Button
        android:id="@+id/select_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать изображение"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />
    <Button
        android:id="@+id/save_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить изменения"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</LinearLayout>