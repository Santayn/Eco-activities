<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Заголовок формы -->
    <TextView
        android:id="@+id/tv_volunteer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация организации"
        style="@style/TitleText"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Поле "Название организации" -->
    <EditText
        android:id="@+id/et_organization_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название организации"
        style="@style/InputField"
        android:textColor="@color/black"/>

    <!-- Поле "Логин" -->
    <EditText
        android:id="@+id/et_organization_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Придумайте логин"
        style="@style/InputField"
        android:textColor="@color/black"/>

    <!-- Поле "Email" -->
    <EditText
        android:id="@+id/et_organization_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email@example.com (необязательно)"
        style="@style/InputField"
        android:textColor="@color/black"/>
    <!-- Поле "Phone" -->
    <EditText
        android:id="@+id/et_organization_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Номер телефона"
        style="@style/InputField"
        android:textColor="@color/black"/>

    <!-- Поле "Пароль" -->
    <EditText
        android:id="@+id/et_organization_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Придумайте пароль (не менее 6 знаков)"
        android:inputType="textPassword"
        style="@style/InputField"
        android:textColor="@color/black"/>

    <!-- Поле "Подтвердите пароль" -->
    <EditText
        android:id="@+id/et_organization_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Повторите пароль"
        android:inputType="textPassword"
        style="@style/InputField"
        android:textColor="@color/black"/>

    <!-- Кнопка "Создать аккаунт" -->
    <Button
        android:id="@+id/btn_organization_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать аккаунт организации"
        style="@style/ButtonStyle"
        android:onClick="registerOrganization"
        />

    <!-- Разделитель -->
    <View
        android:id="@+id/divider_organization"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/input_border_color"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Текст "Уже есть аккаунт? Войти" -->
    <TextView
        android:id="@+id/tv_organization_login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт? Войти"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:onClick="onLoginClick" />
</LinearLayout>