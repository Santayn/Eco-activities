<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Шапка -->

    <!-- Форма регистрации -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок формы -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                style="@style/TitleText"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />



            <!-- Поле "Название организации" -->
            <EditText
                android:id="@+id/organization_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название организации"
                style="@style/InputField" />

            <!-- Поле "Логин" -->
            <EditText
                android:id="@+id/login_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Придумайте логин"
                style="@style/InputField" />

            <!-- Поле "Email" -->
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email@example.com (необязательно)"
                style="@style/InputField" />

            <!-- Поле "Пароль" -->
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Минимум 6 символов"
                android:inputType="textPassword"
                style="@style/InputField" />

            <!-- Поле "Подтвердите пароль" -->
            <EditText
                android:id="@+id/confirm_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Повторите пароль"
                android:inputType="textPassword"
                style="@style/InputField" />

            <!-- Кнопка "Создать аккаунт" -->
            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Создать аккаунт"
                style="@style/ButtonStyle"
                android:onClick="onRegisterClick" />

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/input_border_color"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Текст "Уже есть аккаунт? Войти" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уже есть аккаунт? Войти"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:onClick="onLoginClick" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>