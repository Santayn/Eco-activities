<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Шапка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Текст заголовка -->
        <TextView
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Мероприятия"
            android:textColor="#000000"
            android:textSize="24sp" />

        <!-- Кнопки фильтрации -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <!-- Поиск + Фильтры -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_search_field"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="🔍 Поиск мероприятий..."
            android:inputType="text"
            android:maxLines="1"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="#9E9E9E"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_search"
            android:text=""
            android:textColor="#000000"
            app:backgroundTint="#2196F3" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_filter" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_sort" />
    </LinearLayout>

    <!-- Табы фильтров -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:divider="@android:color/transparent"
            android:dividerPadding="8dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:showDividers="middle"
            android:spacing="8dp">

            <!-- Табы с MaterialButton -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Все"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/ic_events"
                app:iconGravity="textStart"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Сегодня"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/box"
                app:iconGravity="textStart"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Скоро"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/rocket"
                app:iconGravity="textStart"
                app:strokeColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="На неделю"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/paper"
                app:iconGravity="textStart"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Завершенные"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/ok"
                app:iconGravity="textStart"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:text="Мои"
                android:textColor="#000000"
                app:backgroundTint="#2196F3"
                app:cornerRadius="80dp"
                app:icon="@drawable/ic_profile"
                app:iconGravity="textStart"
                app:strokeColor="#000000" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Дата фильтра -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/dateFromInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:hint="С даты события"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <EditText
            android:id="@+id/dateToInput"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_search_field"
            android:hint="По дате события"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>

    <!-- Список мероприятий -->

    <!-- Bottom Navigation -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:padding="8dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/bottom_nav_icon_tint"
        app:itemTextColor="@color/bottom_nav_text_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>