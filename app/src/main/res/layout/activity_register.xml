<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue_background"
    android:gravity="center">

    <!-- Шапка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Иконка пользователя с плюсом -->
        <ImageView
            android:layout_width="84dp"
            android:layout_height="79dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_user_plus"
            app:tint="@color/white" />

        <!-- Логотип EcoEvents -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ecoevents_logo" />

        <!-- Текст приветствия -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Присоединяйтесь и начните делать мир лучше"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Форма регистрации -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_background"
            android:padding="20dp">

            <!-- Заголовок формы -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="sans-serif-bold"
                android:layout_marginTop="20dp" />

            <!-- Выбор типа аккаунта -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tabIndicatorColor="@color/blue"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextColor="@color/grey">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ВОЛОНТЕР" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ОРГАНИЗАЦИЯ" />
            </com.google.android.material.tabs.TabLayout>

            <!-- ViewPager для переключения между типами аккаунтов -->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Fragment для ВОЛОНТЕРА -->
                <fragment
                    android:name="com.example.eco.VolunteerRegistrationFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingClass" />

                <!-- Fragment для ОРГАНИЗАЦИИ -->
                <fragment
                    android:name="com.example.eco.OrganizationRegistrationFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.viewpager.widget.ViewPager>
        </LinearLayout>
    </ScrollView>

    <!-- Ссылка на вход -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже есть аккаунт? Войти"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onLoginClick" />
</LinearLayout>